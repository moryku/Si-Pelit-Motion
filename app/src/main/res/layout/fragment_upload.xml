<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="24dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="24dp"
    android:layout_marginBottom="8dp"
    android:orientation="vertical"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <TextView
        style="@style/loginHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/loginViewsMargin"
        android:text="Upload Form Kajian" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputJudul"
        style="@style/parent"
        android:layout_marginTop="@dimen/loginViewsMargin">

        <EditText
            android:id="@+id/editTextJudul"
            style="@style/modifiedEditText"
            android:hint="Judul"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:textColor="@color/darkest_text" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputAbstrak"
        style="@style/parent"
        android:layout_marginTop="@dimen/loginViewsMargin">

        <EditText
            android:id="@+id/editTextAbstrak"
            style="@style/modifiedEditText"
            android:hint="Abstrak"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:textColor="@color/darkest_text" />
    </com.google.android.material.textfield.TextInputLayout>

    <RelativeLayout
        android:id="@+id/buttonKategori"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/loginViewsMargin"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textViewKategori"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Kategori"
            android:layout_marginLeft="4dp"
            android:textSize="12sp"></TextView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1.2dp"
            android:layout_marginTop="3dp"
            android:layout_marginHorizontal="2dp"
            android:layout_below="@+id/textViewKategori"
            android:background="@color/primaryTextColor"></View>

    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/loginViewsMargin"
        android:layout_height="wrap_content">

    </ImageView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/upload_gambar_optional"></Button>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/cirLoginButton"
        style="@style/loginButton"
        android:layout_gravity="right"
        android:gravity="center"
        android:layout_marginTop="@dimen/loginViewsMargin"
        android:text="Upload" />

</LinearLayout>